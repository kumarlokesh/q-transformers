# Dev image with Python + Rust toolchain for hybrid development
FROM python:3.11-slim

ENV PIP_NO_CACHE_DIR=1 \
    PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1 \
    CARGO_HOME=/usr/local/cargo \
    RUSTUP_HOME=/usr/local/rustup

# System deps
RUN apt-get update && apt-get install -y --no-install-recommends \
    build-essential \
    git \
    curl \
    pkg-config \
    libssl-dev \
    && rm -rf /var/lib/apt/lists/*

# Install Rust via rustup
RUN curl https://sh.rustup.rs -sSf | sh -s -- -y --default-toolchain stable
ENV PATH="/usr/local/cargo/bin:${PATH}"

# Python deps (CPU torch)
RUN python -m pip install --upgrade pip setuptools wheel \
 && python -m pip install --index-url https://download.pytorch.org/whl/cpu torch \
 && python -m pip install maturin transformers numpy matplotlib seaborn jupyter pytest black isort flake8 mypy

WORKDIR /workspace

# Copy minimal files first for layer caching
COPY python/pyproject.toml /workspace/python/pyproject.toml
COPY rust-core/Cargo.toml /workspace/rust-core/Cargo.toml
COPY README.md /workspace/README.md

# Install Python package (editable) and prepare Rust workspace
RUN python -m pip install -e /workspace/python

# Copy source (done later to leverage cache)
COPY python/ /workspace/python/
COPY rust-core/ /workspace/rust-core/

# Default command shows versions
CMD bash -lc "python -c 'import qtransformers as q; print(\"qtransformers\", q.__version__)' && rustc --version && cargo --version"
