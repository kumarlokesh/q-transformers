FROM python:3.11-slim

ENV PIP_NO_CACHE_DIR=1 \
    PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1 \
    CARGO_HOME=/usr/local/cargo \
    RUSTUP_HOME=/usr/local/rustup \
    PATH="/usr/local/cargo/bin:${PATH}"

# ============================================================================
# Layer 1: System dependencies
# ============================================================================
RUN apt-get update && apt-get install -y --no-install-recommends \
    build-essential \
    git \
    curl \
    pkg-config \
    libssl-dev \
    python3-dev \
    libpython3-dev \
    python3-dbg \
    && rm -rf /var/lib/apt/lists/*

# ============================================================================ 
# Layer 2: Rust toolchain
# ============================================================================
RUN curl https://sh.rustup.rs -sSf | sh -s -- -y --default-toolchain stable

# ============================================================================
# Layer 3: Python base packages
# ============================================================================
RUN python -m pip install --upgrade pip setuptools wheel \
 && python -m pip install --index-url https://download.pytorch.org/whl/cpu torch

# ============================================================================
# Layer 4: Development tools
# ============================================================================
RUN python -m pip install \
    maturin \
    transformers \
    numpy \
    matplotlib \
    seaborn \
    jupyter \
    pytest \
    coverage \
    black \
    isort \
    flake8 \
    mypy

WORKDIR /workspace

# ============================================================================
# Layer 5: Dependency manifests ONLY (for caching)
# ============================================================================
COPY python/pyproject.toml /workspace/python/pyproject.toml
COPY rust-core/Cargo.toml /workspace/rust-core/Cargo.toml
COPY rust-core/Cargo.lock /workspace/rust-core/Cargo.lock
COPY requirements.txt /workspace/requirements.txt

# Create minimal Python package structure for installation
RUN mkdir -p /workspace/python/qtransformers && echo "__version__ = '0.1.0'" > /workspace/python/qtransformers/__init__.py

# Install Python dependencies (CACHED unless dependencies change)
RUN python -m pip install -e /workspace/python

# Pre-fetch Rust dependencies (CACHED unless Cargo.toml/lock changes)
RUN mkdir -p /workspace/rust-core/src && echo "fn main() {}" > /workspace/rust-core/src/lib.rs
RUN cd /workspace/rust-core && cargo fetch

# ============================================================================
# Layer 6: Source code (copied AFTER dependencies installed)
# ============================================================================
COPY python/ /workspace/python/
COPY rust-core/src/ /workspace/rust-core/src/

# Rebuild only the final package (fast since deps are cached)
RUN python -m pip install -e /workspace/python --force-reinstall --no-deps
RUN cd /workspace/rust-core && maturin build --release && pip install target/wheels/*.whl --force-reinstall

# Copy remaining files (these changes don't affect dependencies)
COPY tests/ /workspace/tests/
COPY benchmarks/ /workspace/benchmarks/
COPY examples/ /workspace/examples/
COPY Makefile /workspace/Makefile
COPY README.md /workspace/README.md

CMD ["bash", "-c", "python -c 'import qtransformers as q; print(\"qtransformers\", q.__version__)' && rustc --version && cargo --version"]
